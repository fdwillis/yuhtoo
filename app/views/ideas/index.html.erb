<div class="row justify-content-center">
         <div class="col-12">
            <div class="card position-relative inner-page-bg bg-primary" style="height: 150px;">
               <div class="inner-page-title">
                  <h3 class="text-white">Participate more</h3>
                  <p class="text-white mb-0">Post ideas - Put money in - Post comments</p>
                  <a class="nav-link" type="button" data-bs-toggle="modal" data-bs-target="#newIdea">
                    <button type="button" class="btn btn-secondary-subtle">New Idea</button>
                  </a>
               </div>
            </div>
         </div>
      </div>
<div class="row">
  <% if request.user_agent.include?('Mobile') %>
    <div class="col-12">
      <div id="ideas">
        <% @ideas.each do |idea| %>
          <%= render idea %>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="col-8">
      <div id="ideas">
        <% @ideas.each do |idea| %>
          <%= render idea %>
        <% end %>
      </div>
    </div>
    <div class="col-4">
      <div class="card">
         <div class="card-header d-flex justify-content-between mb-n4">
            <div class="header-title">
              <h2 class="card-title"><svg xmlns="http://www.w3.org/2000/svg" height="20" width="17.5" viewBox="0 0 448 512"><!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path fill="#ff0000" d="M96 0C43 0 0 43 0 96L0 416c0 53 43 96 96 96l288 0 32 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l0-64c17.7 0 32-14.3 32-32l0-320c0-17.7-14.3-32-32-32L384 0 96 0zm0 384l256 0 0 64L96 448c-17.7 0-32-14.3-32-32s14.3-32 32-32zm32-240c0-8.8 7.2-16 16-16l192 0c8.8 0 16 7.2 16 16s-7.2 16-16 16l-192 0c-8.8 0-16-7.2-16-16zm16 48l192 0c8.8 0 16 7.2 16 16s-7.2 16-16 16l-192 0c-8.8 0-16-7.2-16-16s7.2-16 16-16z"></path></svg>&nbsp;YuhToo Library</h2>
            </div>
         </div>
          <% if @library.present? %>
            <% @library.each do |video| %>
              <div class="social-post">
                <div class="card card-block card-stretch card-height">
                  <div class="user-post mt-4">
                     <div class="ratio ratio-16x9">
                        <iframe src="<%= video.link %>" allowfullscreen=""></iframe>
                     </div>
                  </div>
                  <div class="mt-4">
                    <h5 class="mb-2"><%= video.title %></h5>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
      </div>
    </div>
  <% end %>
</div>